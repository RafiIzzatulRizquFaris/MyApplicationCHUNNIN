<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenresActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_genres"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/item_movie_popular"/>

    <ProgressBar
        android:id="@+id/pg_genre_movie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/rv_genres"
        app:layout_constraintEnd_toEndOf="@+id/rv_genres"
        app:layout_constraintStart_toStartOf="@+id/rv_genres"
        app:layout_constraintTop_toTopOf="@+id/rv_genres" />

</androidx.constraintlayout.widget.ConstraintLayout>